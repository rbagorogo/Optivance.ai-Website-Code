    <script>
        // JavaScript for Mobile Menu Toggle
        document.getElementById('mobile-menu-btn').addEventListener('click', function() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });

        // JavaScript for Contact Form Submission (Mock)
        document.getElementById('contact-form').addEventListener('submit', function(e) {
            e.preventDefault();
            const form = e.target;
            const messageBox = document.getElementById('message-box');
            
            if (form.checkValidity() === false) {
                return;
            }

            // Show loading message
            messageBox.textContent = 'Transmitting data packet securely...';
            messageBox.classList.remove('hidden', 'text-green-400', 'bg-green-900', 'border-green-700');
            messageBox.classList.add('text-optivance-primary-blue', 'bg-optivance-dark-gray', 'border-optivance-primary-blue');

            // Simulate API submission delay
            setTimeout(() => {
                // Successful submission message
                messageBox.textContent = 'Confirmation: Your challenge has been received. An expert will respond shortly.';
                messageBox.classList.remove('text-optivance-primary-blue', 'bg-optivance-dark-gray', 'border-optivance-primary-blue');
                messageBox.classList.add('text-green-400', 'bg-green-900', 'border-green-700');

                // Clear the form fields
                form.reset();
            }, 1500);
        });
    </script>
